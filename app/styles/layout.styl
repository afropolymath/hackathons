@import 'reset'

html, body
  height 100%

body
  background-color #EEE
  font-family 'Din Pro', sans-serif
  position relative

.uppercase
  text-transform uppercase

.wrapper
  margin 0
  padding 0

.sidenav
  background-color #fff
  position fixed
  left 0
  top 0
  bottom 0
  height 100%
  width 80px

.logo
  padding 10px
  border-bottom 1px solid #dedede
  height 80px
  width 80px

.sidenav .expander,
.sidenav .side-menu li
  padding 20px 0
  text-align center

.expander a,
.side-menu li a
  color #ccc

.expander:hover a,
.side-menu li:hover a
  color #EE6E73

.side-menu
  li
    &.active
      background-color #EE6E73
      a
        color #fff

.top-nav
  background-color #3359DF
  box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.5)
  position fixed
  top 0
  left 0
  height 80px
  right 0
  width 100%
  .user-info
    .profile-details
      text-align center
      padding 0 10px
      color #fff
      img
        border-radius 50% 50%
        height 50px
        width 50px
    .btn-login
      background #fff
      margin-left 10px
      padding 10px 15px
      color #3359DF
      font-weight 400
      text-align center
      display inline-block
      font-size 1.0em
      cursor pointer
      border-radius 2px
      box-shadow 0 2px 4px 0 rgba(0,0,0,0.2)
      transition 0.4s
      &:hover
        box-shadow 0 2px 10px 0 rgba(0,0,0,0.4)
        transform translateY(-3px)
        

::-webkit-scrollbar
    width 6px

::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(238,110,115,0.1)

::-webkit-scrollbar-thumb
    background-color rgba(238,110,115,0.5)

.overlay
  position fixed
  top 80px
  left 0
  right 0
  bottom 0
  z-index 10
  background-color rgba(0,0,0,0.65)
  overflow-y scroll
  .montage
    height 100%
  .competition-details
    background #FFF
    padding 90px 0
    .header
      margin-bottom 50px
  .team-details
    background #16171D
    padding 90px 0
    .header
      color #fff
      margin-bottom 50px
  .content
    padding 3.0em
    height 100%
    color #fff
    .categories
      margin-bottom 20px
      .title
        background-color #EE6E73
        text-align center
        padding 10px 0
        font-size 1.2em
        text-transform uppercase
      .category
        li
          padding 20px 0
          text-align center
          &:last-child
            border-right none

  .content.comp
    .card-title
      background-color #EE6E73
      text-align center
      padding 10px 0
    .card-content
      font-size .75em
      height 200px
      overflow-y scroll
    .what
      font-size 1.2em
      margin-bottom 20px

.cover-wide
  width 100%!important
  height auto!important

video#bgvid
  position fixed
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  z-index -100
  -webkit-transform translateX(-50%) translateY(-50%)
  transform translateX(-50%) translateY(-50%)
  background-size cover

h1
  color #fff
  font-weight 400
  font-size 4.0em
  margin-bottom 15px

h2
  color #2A3039
  font-size 2.0em

p
  line-height 1.8em
  font-size 1.3em
  color #DEDEDE
  font-weight 100

.more-button
  border-radius 2px
  border solid 1px #fff
  color #fff
  padding 15px 20px
/*************************
TEAM VIEW
**************************/
*
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

/* clear fix */
.grid:after
  content: '';
  display: block;
  clear: both;

/* ---- .grid-item ---- */

.grid-item
  float: left;
  margin: 10px;
  width: 300px;
  height: 500px;
  background: #ffffff;

custom-card-title()
  .title
    color #536171
    font-size 1.5em
    font-weight 500
    margin-bottom 30px
    
custom-card-text()
  p
    color #8091A5
    font-size 1.0em
    font-weight 400
    &.em
      color #3359DF
      font-size 1.0em
      font-weight 500

custom-card-content()
  .content
    padding 3em
    .icon
      color #536171
      margin-bottom 30px
      i
        font-size 2.7em  
    custom-card-title()
    custom-card-text()

.custom-card
  text-align center
  background #fff
  border-radius 2px
  border solid 1px #efefef
  box-shadow: 0 3px 5px 0 rgba(0,0,0,0.08)
  color #8091A5
  transition 0.4s
  &:hover
    box-shadow 0 5px 14px 2px rgba(0,0,0,0.1)
    transform translateY(-3px)
  custom-card-content()
      

.transparent-card
  text-align center
  color #8091A5
  custom-card-content()
  
.card .card-action
  padding: 3px;

.trans
  opacity: 0.8;

.circle
  border-radius: 50%;
  width: 40px;
  height: 40px;

img
  vertical-align: middle;
  margin-right: 5px;

.clear
  clear: both;

.team-avatar
  width: 50px
  height: 50px

.team-form
  margin-top: 30px;

.create-team
  font-size: 24px;
  color: #333

.modal h1
  margin-top: 30px;

.modal
  max-height: 55%;

/******************
Create Team Modal
******************/
.input-field
  label
      color: #546e7a;
  input[type=text]:focus
      border-bottom: 1px solid #546e7a;
      box-shadow: 0 1px 0 0 #546e7a;
      +
          label
              color: #546e7a;

  input[type=text].valid
      border-bottom: 1px solid #546e7a;
      box-shadow: 0 1px 0 0 #546e7a;

  input[type=text].invalid
      border-bottom: 1px solid red;
      box-shadow: 0 1px 0 0 red;

  .prefix.active
      color: #546e7a;

.team-list
  height 250px
  width 100%
  overflow-y scroll
  padding 15px 25px
  li
    height 60px
    .title
      color: #2e2e2e

.team-card
  .card-content
    padding 10px 25px
  .card-reveal
    background #6376F9
    padding 20px 25px
    border-radius 2px
    p
      padding-top: 20px;
      color: #555;
      font-size: 14px;
    .card-action
      background-color #3359DF
      position absolute
      bottom 0
      right 0
      margin-right 0
      width 100%
      padding 15px 0
      border-radius 0 0 2px 2px
      a i
        color #fefefe

span.title
  color: #fff;
  font-size 14px
  
.card-content span i
  color #3359DF

.card-reveal span i
  color #fff

.card-title
  font-weight 500 !important
  
.actions
  padding 10px 0 !important

.spacer
  margin-top 120px

.spacer-below
  margin-bottom 40px
  
.small.divider
  width 100px
  margin 15px auto

@media (max-width: 940px) {
  .overlay .content {
    padding: 4em !important;
  }
}

@media (max-width: 900px) {
  .overlay .content {
    padding: 2em !important;
  }
}

