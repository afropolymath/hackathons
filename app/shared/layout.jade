.sidenav
    .logo
        img.responsive-img(src='img/olympic.png')
    .expander.hide-on-med-and-up
        a(href='#')
            i.mdi-navigation-menu.small
    ul.side-menu
        li.active
            a(href='#')
                i.mdi-navigation-apps.small
        li
            a.how-link(href='#')
                i.mdi-social-people.small
.top-nav.row
    .nav-container
        .app-name.col.s11.m3.l3.valign-wrapper
            h3.uppercase.valign.center-align Andela Olympics {{ladi}}
        .welcome.hide-on-small-only
            a.profile-details(ng-if='currentUser')
                img(ng-src='{{currentUser.picture}}')
                span {{currentUser.name}}
            a.btn-login(ng-if='!currentUser' ng-click='login()')
                span Login
            a.btn-login(ng-if='currentUser' ng-click='logout()')
                span Logout
video#bgvid.hide-on-med-and-down(autoplay='', loop='', poster='')
    source(src='media/hackdown.webm', type='video/webm')
    source(src='media/hackdown.mp4', type='video/mp4')
