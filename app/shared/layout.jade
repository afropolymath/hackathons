.top-nav.flex
  .fg-container.flex.fill.vertical.align-middle
    .app-name
      img(src='https://3xyh3sqxv063a8xzo5uk2zn1-wpengine.netdna-ssl.com/wp-content/uploads/2016/02/Andela-Logo-White-Landscape-300px.png' class='responsive-img' style="height:50px")
    .app-info.flex.fill.align-middle-right
      .user-info.hide-on-small-only
        a.profile-details(ng-if='currentUser')
          img(ng-src='{{currentUser.picture}}')
          span {{ currentUser.name }}
        a.btn-login(ng-if='!currentUser' ng-click='login()')
          span Login
        a.btn-login(ng-if='currentUser' ng-click='logout()')
          span Logout
video#bgvid.hide-on-med-and-down(autoplay='', loop='', poster='')
  source(src='media/hackdown.webm', type='video/webm')
  source(src='media/hackdown.mp4', type='video/mp4')
